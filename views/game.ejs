    <meta property="og:image:width" content="256">
<meta property="og:image:height" content="256">
<meta property="og:image:type" content="image/jpeg">
    <meta name="keywords"
        content="game,game download,online game,Multiplayer,two player,online,avatar,bingo,bingo game,kids game,game download,website game,web games,games,best games,Multiplayer games,windows game,android game,timepass,fun games,fun,opponent,akshay,akshay urs,urs,india,free game,free,zero ads,ads,top games,mobile game,moble,play bingo">
</head>

<body>
<link itemprop="thumbnailUrl" href="http://bingobyakshay.herokuapp.com/favicon.jpg"> 
<span itemprop="thumbnail" itemscope itemtype="http://schema.org/ImageObject"> 
  <link itemprop="url" href="http://bingobyakshay.herokuapp.com/favicon.jpg"> 
</span>
    <div class="preloader">
        BINGO&#9889;
        <div class="loader"></div>
    </div>
    <div class="slides slide1" id="slide1">
        <div class="title">BINGO</div>
        <div class="game-desc">
            B I N G O !! <h2>&#127918;</h2>Online Multiplayer Game<br>Play With your friends<br>Have Fun!<br>
            &#127937;
            NO
            ADS ü•≥
            <br>
        </div>
        <div class="play-button-container">
            <div class="play-button">PLAY</div>
        </div>
        <footer>
            <center>
                <h3>Made with ‚ù§Ô∏è By Akshay Urs</h3>
                <div class="icons"><a href="https://github.com/akshayurs" target="_blank"><img style="margin: 5px 10px;"
                            src="/images/github.png" width="20px"></a><a
                        href="https://www.linkedin.com/in/akshay-urs-m-808098212" target="_blank"><img
                            src="/images/linkedIn.png" style="margin: 5px 10px;" width="20px"></a></div>
            </center>
        </footer>
    </div>

    <div class="slides slide2" id="slide2">
        <div class="name-title">Enter Your <br>Name</div>
        <form class="form-prevent" id="name-form">
            <div class="name-container">
                <input type="text" autocomplete="off" value="" id="input-name" placeholder="YOUR NAME">
                <input type="submit" class="next-btn" value="Next"></input>
            </div>
        </form>
    </div>

    <div class="slides slide3" id="slide3">
        <div class="avatar-title">Select Avatar</div>
        <div class="avatar-container">
            <img src="/images/avatar1.png" class="avatars" data-id="1" alt="avatar">
            <img src="/images/avatar2.png" class="avatars" data-id="2" alt="avatar">
            <img src="/images/avatar3.png" class="avatars" data-id="3" alt="avatar">
            <img src="/images/avatar4.png" class="avatars" data-id="4" alt="avatar">
            <img src="/images/avatar5.png" class="avatars" data-id="5" alt="avatar">
            <img src="/images/avatar6.png" class="avatars" data-id="6" alt="avatar">
            <img src="/images/avatar7.png" class="avatars" data-id="7" alt="avatar">
            <img src="/images/avatar8.png" class="avatars" data-id="8" alt="avatar">
        </div>
    </div>

    <div class="slides slide4">
        <div class="option-random">
            <h2>Play with Random Opponent Online</h2>
            <button id="random-btn">Random Opponent</button>
        </div>
        <div class="option-room">
            <h2>Play With Friends Online</h2>
            <div class="room-container">
                <button id="host-btn">Host Game</button>
                <button id="join-btn">Join Game</button>
            </div>
        </div>
    </div>
    <div class="slides slide5">
        <center>
            <br><br>
            <img class="avatars" id="selected-avatar">
            <h2>Player Name : <span id="entered-name"></span></h2>
            <h2 id="roomid">Room Id : <span id="room-id">WAIT</span></h2>
            <div class="flex share">
                <span id="copytext" style="font-size:24px" onclick="copyToClipboard()">&#128203;</span>
                <a id="whatsapplink" target="_blank"><img src="/images/whatsapp.png" width="30px"></a>
            </div>
            <h1>Waiting for other player..</h1>
        </center>
    </div>

    <!-- Game screen -->
    <div class="game-screen flex-col">
        <header>
            <a href="/">BINGO</a>
        </header>
        <div class="flex players">
            <div class="player flex flex-col">
                <div class="score flex flex-col">
                    <img alt="playar avatar" class="avatars game-avatar" id="player-avatar">
                    <div class="player-name">player</div>
                    <div class="player-score flex">0</div>
                </div>
                <div class="player-completed">
                    <div class="letters grid" id="player-letter-1">B</div>
                    <div class="letters grid" id="player-letter-2">I</div>
                    <div class="letters grid" id="player-letter-3">N</div>
                    <div class="letters grid" id="player-letter-4">G</div>
                    <div class="letters grid" id="player-letter-5">O</div>
                </div>
            </div>
            <div class="player flex flex-col">
                <div class="score flex flex-col">
                    <img alt="opponent avatar" class="avatars game-avatar" id="opponent-avatar">
                    <div class="opponent-name">opponent</div>
                    <div class="opponent-score flex">0</div>
                </div>
                <div class="opponent-completed">
                    <div class="letters grid" id="opponent-letter-1">B</div>
                    <div class="letters grid" id="opponent-letter-2">I</div>
                    <div class="letters grid" id="opponent-letter-3">N</div>
                    <div class="letters grid" id="opponent-letter-4">G</div>
                    <div class="letters grid" id="opponent-letter-5">O</div>
                </div>
            </div>
        </div>
        <div class="move">Your Turn</div>
        <div class="box grid">
        </div>
        <div class="received-msgs"></div>
        <div class="flex chat-container">
            <form class="form-prevent">
                <input type="text" placeholder="CHAT" class="chat-input">
                <input type="submit" class="chat-btn" value="SEND">
            </form>
        </div>
    </div>
    <audio src="/audio/player1.mp3" id="player1-sound"></audio>
    <audio src="/audio/player2.mp3" id="player2-sound"></audio>
    <audio src="/audio/winning.mp3" id="winning-sound"></audio>
    <audio src="/audio/lossing.mp3" id="lossing-sound"></audio>
    <audio src="/audio/next.mp3" id="next-sound"></audio>
    <audio src="/audio/chat.mp3" id="chat-sound"></audio>
    <script src="/socket.io/socket.io.js"></script>
    <script>var roomid = "<%=roomid%>"</script>
    <script src="/script.js"></script>
</body>

</html>
